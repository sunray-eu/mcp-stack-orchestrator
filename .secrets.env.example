# Copy to .secrets.env and fill only what you need.
# Never commit .secrets.env.

# Host filesystem mounts (read-only inside containers)
MCP_HOST_FS_ROOT=/
MCP_HOST_FS_USERS=/Users

# SurrealDB local runtime
SURREALDB_ROOT_USER=root
SURREALDB_ROOT_PASS=root
SURREALDB_DEFAULT_NS=mcp
SURREALDB_DEFAULT_DB=workspace
SURREALDB_RPC_PORT=18083
SURREALDB_WS_HOST=127.0.0.1
SURREALIST_CONNECTION_NAME=Local SurrealDB (Docker)

# Docs MCP embedding provider (recommended)
OPENAI_API_KEY=
DOCS_MCP_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_API_BASE=

# Optional alternative providers
GOOGLE_API_KEY=
GOOGLE_APPLICATION_CREDENTIALS=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_INSTANCE_NAME=
AZURE_OPENAI_API_DEPLOYMENT_NAME=
AZURE_OPENAI_API_VERSION=

# Archon profile (required for archon/full)
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
HOST=localhost
LOG_LEVEL=INFO
GITHUB_PAT_TOKEN=
